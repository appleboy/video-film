<% _.each(videos, function (item) { %>
<div class="col-md-2 video">
  <div class="thumbnail">
    <a class="images" href="<%= item.video.nba_id %>" style="background-image: url('<%= item.video.thumbnail %>')">
      <span class="duration"><%= item.video.duration %></span>
    </a>
    <div class="caption">
      <h3 class="title"><%= item.video.title %></h3>
      <p style="text-align:center"><a href="<%= item.video.src %>" target="_blank" class="btn btn-primary btn-sm" role="button"><span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span> 下載</a> <a href="<%= item.video.nba_id %>" class="btn btn-success btn-sm" role="button"><span class="glyphicon glyphicon-facetime-video" aria-hidden="true"></span> 觀看</a></p>
      <p class="clearfix nba-info"><span class="view-count"><span data-module="view_counts" data-nba-id="<%= item.video.nba_id %>"><%= item.video.getViewCounts() %></span> 觀看</span><span class="game-date"><%= item.video.gameDate() %></span></p>
    </div>
  </div>
</div>
<% }) %>
